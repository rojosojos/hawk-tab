<Custom_Field@MDTextField>:
    # font_size: 16
    disabled: "True"
<HeadingLabel@MDLabel>:
    # font_size: 16

<MainInterface>
    
    size: root.width, root.height
    padding: dp(10)
    spacing: dp(5)


    HeadingLabel:
        id: top_heading
        text: "MH-60S TAB Data"
        size_hint_y: 1/11 

    GridLayout:
        cols: 2
        spacing: dp(5)
        size_hint_y: 2/11
        #left, top, right, bottom
        padding: (dp(0), dp(0), dp(0), dp(10))

        MDRaisedButton:
            id: pa_button
            text: "Pressure Altitude"
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release: root.pa_menu.open()
        MDLabel:
            id: pa_label
            text: ""
            halign: "center"

        MDRaisedButton:
            id: oat_button
            text: "OAT"
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release: root.oat_menu.open()
        MDLabel:
            id: oat_label
            text: ""
            halign: "center"


    MDTextField:
        id: zero_fuel_wt
        hint_text: "Zero Fuel Weight"
        size_hint_y: 1/11
    MDTextField:
        id: fuel_wt
        hint_text: "Fuel Weight"
        size_hint_y: 1/11
    MDTextField:
        id: atf
        hint_text: "ATF (.9 - 1.0)"
        size_hint_y: 1/11
        text: ""

    GridLayout:
        cols: 2
        size_hint_y: 1/11

        MDRaisedButton:
            id: calculate_button
            text: "Calculate"
            pos_hint: {"center_x": .5, "center_y": .5}
            # on_press: root.check_input_values()
            on_release: root.calculate_values()

        MDLabel:
            id: margin_label
            # font_size: 20
            halign: "center"
            valign: "middle"

    GridLayout:
        size_hint_y: 3/11
        cols: 2
        #left, top, right, bottom
        padding: (dp(0), dp(15), dp(0), dp(10))

        Custom_Field:
            id: ac_weight_label
            hint_text: "Aircraft Weight"

        Custom_Field:
            id: hoge_mgw_label
            hint_text: "Max HOGE Weight"

        Custom_Field:
            id: hoge_pr_label
            hint_text: "HOGE Pwr Req"

        Custom_Field:
            id: power_available_label
            hint_text: "Power Available"

        Custom_Field:
            id: hige_pr_label
            hint_text: "HIGE Pwr Req"

        Custom_Field:
            id: da_label
            hint_text: "Density Altitude"
